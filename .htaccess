RewriteEngine on
Options +FollowSymLinks

RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=301,L] 

RewriteCond %{REQUEST_URI} !\?
RewriteCond %{REQUEST_URI} !\&
RewriteCond %{REQUEST_URI} !\=
RewriteCond %{REQUEST_URI} !\.
RewriteCond %{REQUEST_URI} !\/$
RewriteCond $1 !^(admin)
RewriteRule ^(.*[^\/])$ /$1/ [R=301,L]


php_value display_errors off

php_value upload_max_filesize 400M
php_value max_execution_time 8000
php_value post_max_size 400M
php_value max_input_time 8000
php_value memory_limit 500M

RewriteCond $1 !^(index\.php|ostatki|pdf|images|brightbuild-new-master|uploads|download|template|doc|robots\.txt)
RewriteRule ^(.*)$ /index.php/$1

RewriteCond %{REQUEST_URI} ^(.*)//(.*)$
RewriteRule . %1/%2 [R=301,L]

RedirectPermanent /main /

ErrorDocument 404 /pages/page_404

